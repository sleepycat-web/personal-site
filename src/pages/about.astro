---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="About | Amlan Sarmah" description="About Amlan Sarmah">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="Thanks for stopping by. Read below to learn more about myself and my background."
			>
				<!-- <img
					width="1553"
					height="873"
					src="/assets/at-work.jpg"
					alt=""
				/> -->
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>Welcome to my corner of the web! I'm Amlan, a passionate developer dedicated to crafting exceptional digital experiences. With a keen eye for detail and a knack for problem-solving, I specialize in building sleek and responsive websites that not only look great but also perform flawlessly across all devices, while also optimizing them for higher search engine rankings.
					</p>
					<p>Whether it's bringing a client's vision to life or tackling a challenging problem, I thrive on the creativity and technicality of the development process.</p>   
				</div>
			</section>
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>B.Tech CSE (Computer Science Engineering) - Sikkim Manipal Institute of Technology</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<div class="skills-grid">
						<div class="skill-category">
							<h3>Languages</h3>
							<div class="skill-tags">
								<span>C</span>
								<span>C++</span>
								<span>Java</span>
								<span>JavaScript</span>
								<span>TypeScript</span>
							</div>
						</div>
						<div class="skill-category">
							<h3>Frameworks</h3>
							<div class="skill-tags">
								<span>Next.js</span>
								<span>CSS3</span>
								<span>Astro</span>
								<span>React</span>
								<span>Tailwind</span>
								<span>Bootstrap</span>
							</div>
						</div>
						<div class="skill-category">
							<h3>Database Management</h3>
							<div class="skill-tags">
								<span>MySQL</span>
								<span>MongoDB</span>
							</div>
						</div>
						<div class="skill-category">
							<h3>Cloud and Security Tools</h3>
							<div class="skill-tags">
								<span>Vercel</span>
								<span>Netlify</span>
								<span>Cloudflare</span>
							</div>
						</div>
						<div class="skill-category">
							<h3>Others</h3>
							<div class="skill-tags">
								<span>WordPress</span>
								<span>Search Engine Optimization</span>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	/* Updated styles for skills section with reduced spacing */
	.skills-grid {
		display: flex;
		flex-direction: column;
		gap: 1.25rem; /* Reduced from 2rem */
	}

	.skill-category h3 {
		font-size: var(--text-md);
		color: var(--gray-100);
		margin-bottom: 0.5rem; /* Reduced from 0.75rem */
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem; /* Reduced from 0.75rem */
	}

	.skill-tags span {
		background-color: rgba(45, 55, 72, 0.8); /* Slightly transparent dark background */
		color: var(--gray-200);
		padding: 0.3rem 0.8rem; /* Reduced padding */
		border-radius: 1.5rem;
		font-size: var(--text-sm);
		transition: background-color 0.2s ease;
	}

	.skill-tags span:hover {
		background-color: rgba(45, 55, 72, 1); /* Solid on hover */
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}

		/* Adjusted responsive spacing */
		.skills-grid {
			gap: 1.5rem; /* Reduced from 2.5rem */
		}

		.skill-tags {
			gap: 0.75rem; /* Reduced from 1rem */
		}
	}
</style>